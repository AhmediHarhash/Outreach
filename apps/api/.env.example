# Hekax API Configuration
# Copy to .env and fill in your values

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development  # development, staging, production
RUST_LOG=info,hekax_api=debug

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 48
JWT_SECRET=your-64-char-secret-key-generate-with-openssl
JWT_ACCESS_EXPIRY_SECS=900      # 15 minutes
JWT_REFRESH_EXPIRY_DAYS=30

# Encryption key for user API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
GOOGLE_REDIRECT_URI=https://api.hekax.io/api/v1/auth/google/callback

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI - for embeddings (text-embedding-3-small) and GPT-4
OPENAI_API_KEY=sk-xxx

# Anthropic - for Claude hints (optional, can use OpenAI instead)
ANTHROPIC_API_KEY=sk-ant-xxx

# =============================================================================
# CLOUDFLARE R2 STORAGE
# =============================================================================
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET_NAME=hekax-storage
R2_PUBLIC_URL=https://storage.hekax.io  # Optional custom domain

# =============================================================================
# CORS & FRONTEND
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://app.hekax.io
WEB_APP_URL=https://app.hekax.io
DESKTOP_SCHEME=hekax

# =============================================================================
# EXTERNAL SERVICES (for hekax-worker)
# =============================================================================
# Apollo.io - for lead scraping
APOLLO_API_KEY=xxx

# Optional enrichment services
CLEARBIT_API_KEY=xxx
HUNTER_API_KEY=xxx

# =============================================================================
# AWS SES (Email)
# =============================================================================
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=xxx
AWS_SES_SECRET_ACCESS_KEY=xxx
AWS_SES_FROM_EMAIL=noreply@hekax.io
AWS_SES_FROM_NAME=Hekax

# =============================================================================
# MONITORING (optional)
# =============================================================================
SENTRY_DSN=https://xxx@sentry.io/xxx
